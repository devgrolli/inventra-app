{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@assets/*": ["assets/*"],
      "@screens/*": ["screens/*"],
      "@components/*": ["components/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}

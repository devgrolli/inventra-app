{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      // "@atomic": ["./atomic"],
      // "@atomic/*": ["./atomic/*"],
      // "test-utils": ["../testing/utils"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
